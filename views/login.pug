html
    head
        title Home
        link(rel="stylesheet", href="/assets/css/style.css")
    body
        div(class="container")
            form(method="POST", action="/login/sendotp")
                label Mobile Number:
                div(class="number-container")
                    select(name="countryCode", class="form-element")
                        each val in telephoneCodes
                            if val.country === 'IN'
                                option(value=val.code selected) #{val.emoji}
                            else
                                option(value=val.code) #{val.emoji}
                    input(type="tel", name="mobile", pattern="[0-9]*", class="form-element", title="Mobile Number" required)
                input(type="submit", value="Send OTP", class="form-element button")
        